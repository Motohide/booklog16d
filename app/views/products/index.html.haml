= render 'shared/header'

.body
  .wrapper
    .top-page
      = image_tag "bnr_winner2017_970_230.png",class:"booklog-award"
    .middle-page
      %ul.recommend-list
        %li.recommend-list__1
          = image_tag "bb-200.png"
        %li.recommend-list__2
          = image_tag "bnr_200_65.png"
        %li.recommend-list__3
          = image_tag "bnr_bukutsu200_65.png"
        %li.recommend-list__4
          = image_tag "bnr_itengineer2017_200_65.png"

      .middle-page-content
        .middle-page-content__popular-review
          %h2.top-title
            人気のレビュー
          - 5.times do
            .review-container
              = image_tag "book__review__karioki.jpg",class:"review-container__image"
              .review-container__product-info
                .review-container__product-info__title
                  タイトル
                .review-container__product-info__author
                  作者の名前だよ
              .review-container__review
                .user-info
                  .user-name
                    ユーザー名前
                  .rating
                    %i.fa.fa-star
                    %i.fa.fa-star
                    %i.fa.fa-star
                    %i.fa.fa-star
                    %i.fa.fa-star
                .review-text
                  .review-text__body
                    ヨオオオオオオオオオオオオオアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアアサ
                  .review-text__like-count
                    = image_tag "faving.gif"
          .more-btn
            = link_to "もっとみる", "", class:"more-btn__body"
        .middle-page-content__ranking
          %h2.top-title
            ランキング
          - 10.times do
            .ranking-container
              = image_tag "book__review__karioki.jpg",class:"ranking-container__image"
              .ranking-container__product-info
                .ranking-container__product-info__title
                  AAAAAAAAAAAAAaaa
                .ranking-container__product-info__author
                  作者の名前だよ
                .ranking-container__evaluation
                  = link_to "219人が登録","",class:"ranking-container__evaluation__registration-number"
                  = link_to "3.75", "", class:"fa fa-star ranking-container__evaluation__average"
                  %span.ranking-container__evaluation__recent-registration-number 最近69人が登録
          .more-btn
            = link_to "もっとみる", "", class:"more-btn__body"

        .middle-page-content__release
          %h2.top-title
            新刊情報
          - 10.times do
            .release-container
              = image_tag "book__review__karioki.jpg",class:"release-container__image"
              .release-container__product-info
                .release-container__product-info__title
                  YOOOOOOOOOOOOO
                .release-container__product-info__author
                  作者の名前だよ
                .release-container__product-info__publish-date
                  2017年11月3日
              .release-container__date
          .more-btn
            = link_to "もっとみる", "", class:"more-btn__body"
        .popular-author
          %h3.popular-author__heading
            話題の作家
          %ul.hot-authors
            - 45.times do
              %li
                = link_to "青山", "", class:"authors-name"
              %li
              = link_to "青山", "", class:"authors-name"

          %h3.popular-author__heading
            人気の作家のおすすめ本・新刊情報・電子書籍
          %ul.popular-authors
            - 45.times do
              %li
                = link_to "田中", "", class:"authors-name"
              %li
                = link_to "田中", "", class:"authors-name"

        .advertisement
        .total-amount-of-numbers-about-booklog
          %span ブクログは、
          %span.red 104万5403人
          %span の利用者が、
          %span.red 7751万4529アイテム
          %span を登録して、
          %span.red 812万5116件のレビュー
          %span を書いています。

= render 'shared/footer'
