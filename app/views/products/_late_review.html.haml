- if review.body.present?
  .review-container
    - if @review_books_results[review_counter].image.present?
      = image_tag @review_books_results[review_counter].image,class:"review-container__image"
    - else
      = image_tag "no_image.png",class:"review-container__image"
    .review-container__product-info
      .review-container__product-info__title
        = @review_books_results[review_counter].name
      .review-container__product-info__author
        = @review_books_results[review_counter].author
    .review-container__review
      .user-info
        .user-name
          = review.user.nickname
        .rating
          - review.rate.times do
            %i.fa.fa-star
          - (5 - review.rate).times do
            %i.fa.fa-star-o
      .review-text
        .review-text__body
          = review.body
        .review-text__like-count
          = image_tag "faving.gif"

